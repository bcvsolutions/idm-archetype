{
  "extends": [
    "eslint-config-airbnb"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "impliedStrict": true,
    "allowImportExportEverywhere": false
  },
  "plugins": [
    "react",
    "babel"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "globals": {
      "$": false,
      "DEBUG": false,
      "LOGGER": false,
      "serverUrl": true
  },
  "rules": {
    "quotes": [2, "single" ],
    "space-after-keywords": 2,
    "eqeqeq": [2, "allow-null"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "constructor-super": 2,
    "comma-dangle": 0,
    "id-length": 0,
    "no-eq-null": 0,
    "one-var": [2, { "initialized": "never" }],
    "prefer-const": 1,
    "no-param-reassign": 0,
    "no-this-before-super": 2,
    "no-nested-ternary": 1,
    "no-self-compare": 1,
    "guard-for-in": 1,
    "no-unused-vars": [1, {"vars": "local", "args": "after-used"}],
    "babel/object-shorthand": 1,
    "react/jsx-boolean-value": 1,
    "react/jsx-no-duplicate-props": 2,
    "react/no-multi-comp": 1,
    "react/sort-comp": 0,
    "react/no-did-mount-set-state": 1,
    "react/no-did-update-set-state": 1,
    "no-shadow": 1,
    "no-unused-expressions": 1,
    "react/prop-types": [2, { "ignore": [
        "children",
        "className",
        "style",
        "bsStyle",
        "bsClass",
        "bsSize"
        ]
    }],
  }
}
