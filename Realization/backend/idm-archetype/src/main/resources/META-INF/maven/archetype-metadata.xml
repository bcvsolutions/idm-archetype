<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
	name="idm-module-archetype"
	xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

	<requiredProperties>
		<requiredProperty key="author" />
		<requiredProperty key="moduleName" />
		<requiredProperty key="czechIdMVersion" />
		<requiredProperty key="groupId">
			<defaultValue>eu.bcvsolutions.idm</defaultValue>
		</requiredProperty>
		<requiredProperty key="moduleNameLower">
			<defaultValue>${moduleName.toLowerCase()}</defaultValue>
		</requiredProperty>
		<requiredProperty key="czechIdMGroupId">
			<defaultValue>eu.bcvsolutions.idm</defaultValue>
		</requiredProperty>
	</requiredProperties>
	
	<fileSets>
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory>Realization</directory>
			<includes>
				<include>**/*.*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory></directory>
			<includes>
				<include>.gitignore</include>
			</includes>
		</fileSet>
		<!-- TODO exlude root pom.xml -->
	</fileSets>
	
</archetype-descriptor>
